<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/basketball6"
        android:scaleType="centerCrop"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#7FFFD4"/>

            <TextView
                android:id="@+id/PrintScoreA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="#7FFFD4	"/>

            <Button
                android:id="@+id/ThreeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:onClick="ThreePointA"
                android:text="+3 Point"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8B0000"/>

            <Button
                android:id="@+id/TwoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="TwoPointA"
                android:text="+2 Point"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8B0000"/>


            <Button
                android:id="@+id/FreeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="FreeThrowA"
                android:text="Free Throw"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8B0000"/>

        </LinearLayout>

        <View

            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#7FFFD4">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#7FFFD4"/>

            <TextView
                android:id="@+id/PrintScoreB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="#7FFFD4"/>

            <Button
                android:id="@+id/ThreeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:onClick="ThreePointB"
                android:text="+3 Point"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8B0000"/>

            <Button
                android:id="@+id/TwoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="TwoPointB"
                android:text="+2 Point"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8B0000"/>


            <Button
                android:id="@+id/FreeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="FreeThrowB"
                android:text="Free Throw"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8B0000"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:onClick="Reset"
        android:text="RESET"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#8B0000"/>




</RelativeLayout>